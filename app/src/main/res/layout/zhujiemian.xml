<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/beijing3"
    android:orientation="vertical"
    android:weightSum="3.75">
    <!--第一部分 -->
    <!--第二部分 -->
    <LinearLayout

        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1.1">

        <ImageView
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:id="@+id/imageView4"
            android:background="@drawable/zhuyao" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/imageView5"
            android:text=" 婴 语"
            android:textSize="55sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            />

    </LinearLayout>
    <!--第三部分 -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1.2"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:background="@color/corlo1"
            android:layout_weight="1"
            android:orientation="vertical"
            android:weightSum="2.5">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="生理\n数据"
                android:id="@+id/data"
                android:background="@android:color/transparent"
                android:textSize="50dp"
                android:textColor="#ffffff" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:background="@color/corlo2"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="哭声\n分析"
                android:id="@+id/cry"
                android:background="@android:color/transparent"
                android:textSize="50dp"
                android:textColor="#ffffff" />
        </LinearLayout>

    </LinearLayout>
    <!--第4部分 -->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1.2">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:background="@color/corlo3"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="睡姿\n监测"
                android:id="@+id/waring"
                android:background="@android:color/transparent"
                android:textSize="50dp"
                android:textColor="#ffffff" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:background="@color/corlo4"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="综合\n信息"
                android:id="@+id/all"
                android:background="@android:color/transparent"
                android:textSize="50dp"
                android:textColor="#ffffff" />
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>